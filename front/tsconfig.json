{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@apis/*": ["apis/*"],
      "@schemas/*": ["schemas/*"],
      "@styles/*": ["styles/*"]
    },
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
